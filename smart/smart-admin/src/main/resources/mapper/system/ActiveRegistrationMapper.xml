<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smart.system.mapper.ActiveRegistrationMapper">
    
    <resultMap type="ActiveRegistration" id="ActiveRegistrationResult">
        <result property="regId"    column="reg_id"    />
        <result property="activityId"    column="activity_id"    />
        <result property="userId"    column="user_id"    />
        <result property="userName"    column="user_name"    />
        <result property="phonenumber"    column="phonenumber"    />
        <result property="checkInStatus"    column="check_in_status"    />
        <result property="checkInPhoto"    column="check_in_photo"    />
        <result property="checkInTime"    column="check_in_time"    />
        <result property="createTime"    column="create_time"    />
    </resultMap>

    <sql id="selectActiveRegistrationVo">
        select reg_id, activity_id, user_id, user_name, phonenumber, check_in_status, check_in_photo, check_in_time, create_time from active_registration
    </sql>

    <select id="selectActiveRegistrationList" parameterType="ActiveRegistration" resultMap="ActiveRegistrationResult">
        <include refid="selectActiveRegistrationVo"/>
        <where>  
            <if test="activityId != null "> and activity_id = #{activityId}</if>
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="userName != null  and userName != ''"> and user_name like concat('%', #{userName}, '%')</if>
            <if test="phonenumber != null  and phonenumber != ''"> and phonenumber = #{phonenumber}</if>
            <if test="checkInStatus != null  and checkInStatus != ''"> and check_in_status = #{checkInStatus}</if>
            <if test="checkInPhoto != null  and checkInPhoto != ''"> and check_in_photo = #{checkInPhoto}</if>
            <if test="checkInTime != null "> and check_in_time = #{checkInTime}</if>
        </where>
    </select>
    
    <select id="selectActiveRegistrationByRegId" parameterType="Long" resultMap="ActiveRegistrationResult">
        <include refid="selectActiveRegistrationVo"/>
        where reg_id = #{regId}
    </select>

    <insert id="insertActiveRegistration" parameterType="ActiveRegistration" useGeneratedKeys="true" keyProperty="regId">
        insert into active_registration
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="activityId != null">activity_id,</if>
            <if test="userId != null">user_id,</if>
            <if test="userName != null">user_name,</if>
            <if test="phonenumber != null">phonenumber,</if>
            <if test="checkInStatus != null">check_in_status,</if>
            <if test="checkInPhoto != null">check_in_photo,</if>
            <if test="checkInTime != null">check_in_time,</if>
            <if test="createTime != null">create_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="activityId != null">#{activityId},</if>
            <if test="userId != null">#{userId},</if>
            <if test="userName != null">#{userName},</if>
            <if test="phonenumber != null">#{phonenumber},</if>
            <if test="checkInStatus != null">#{checkInStatus},</if>
            <if test="checkInPhoto != null">#{checkInPhoto},</if>
            <if test="checkInTime != null">#{checkInTime},</if>
            <if test="createTime != null">#{createTime},</if>
         </trim>
    </insert>

    <update id="updateActiveRegistration" parameterType="ActiveRegistration">
        update active_registration
        <trim prefix="SET" suffixOverrides=",">
            <if test="activityId != null">activity_id = #{activityId},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="userName != null">user_name = #{userName},</if>
            <if test="phonenumber != null">phonenumber = #{phonenumber},</if>
            <if test="checkInStatus != null">check_in_status = #{checkInStatus},</if>
            <if test="checkInPhoto != null">check_in_photo = #{checkInPhoto},</if>
            <if test="checkInTime != null">check_in_time = #{checkInTime},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </trim>
        where reg_id = #{regId}
    </update>

    <delete id="deleteActiveRegistrationByRegId" parameterType="Long">
        delete from active_registration where reg_id = #{regId}
    </delete>

    <delete id="deleteActiveRegistrationByRegIds" parameterType="String">
        delete from active_registration where reg_id in 
        <foreach item="regId" collection="array" open="(" separator="," close=")">
            #{regId}
        </foreach>
    </delete>
</mapper>